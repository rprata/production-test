                    </div>
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <label>Gender</label>
                            <%= t.text_field :gender, :placeholder => "Gender", class: "form-control" %>
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <label>Age</label>
                            <%= t.text_field :age, :placeholder => "Age", class: "form-control" %>
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <label>Hometown</label>
                            <%= t.text_field :hometown, :placeholder => "Hometown", class: "form-control" %>
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <label>Education and Major</label>
                            <%= t.text_field :education, :placeholder => "Education and Major", class: "form-control" %>
                            <p class="help-block text-danger"></p>
